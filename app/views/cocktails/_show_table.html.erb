<div class="table-header">
  <div class="table-cocktail-color cocktail-<%= @cocktail.color %>"></div>
  <div class="table-cocktail-name"><h3 ><%= @cocktail.name %></h3></div>
</div>
<table>
    <thead>
        <tr>
            <td class="underline">Ingredient</td>
            <td class="empty"></td>
            <td class="underline">Amount</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <% @cocktail.doses.each do |dose| %>
        <tr>
            <td>
                <%= dose.ingredient.name %>
            </td>
            <td class="empty"></td>
            <td>
                <%= dose.description %>
            </td>
            <td>
                <%= link_to dose_path(dose), method: 'delete',data: { confirm: "Keep it! I like it!"} do %>
                <i class="fas fa-trash-alt"></i>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
