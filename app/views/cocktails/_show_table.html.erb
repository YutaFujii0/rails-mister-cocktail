<table>
    <thead>
        <tr>
          <td><h3 class="table-cocktail-name"><%= @cocktail.name %></h3></td>
        </tr>
        <tr>
            <td class="underline">Ingredient</td>
            <td class="empty"></td>
            <td class="underline">Amount</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <% @cocktail.doses.each do |dose| %>
        <tr>
            <td>
                <%= dose.ingredient.name %>
            </td>
            <td class="empty"></td>
            <td>
                <%= dose.description %>
            </td>
            <td>
                <%= link_to dose_path(dose), method: 'delete',data: { confirm: "Keep it! I like it!"} do %>
                <i class="fas fa-trash-alt"></i>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
