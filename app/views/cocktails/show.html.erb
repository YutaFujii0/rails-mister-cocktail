<%= render partial: "layouts/banner", object: @cocktail %>

<div class="container">
  <div class="container-cocktail-body">
    <div class="container-left">
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %> | <%= dose.description %></li>
          <%= link_to dose_path(dose), method: 'delete' do %>
            delete!
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="container-right">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, collection: Ingredient.order(:name),class: 'js-example-basic-single' %>

        <%= f.input :description %>
        <%= f.submit 'Add',class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
<select class="js-example-basic-single" name="state">
  <% Ingredient::INGREDIENTS.each do |ingredient| %>
  <option value="<%= ingredient %>"><%= ingredient %></option>
  <% end %>
</select>
