<% content_for :header do %>
  <h2>Find your favorite MAGIC</h2>
<% end %>
<% content_for :title do %>
  <h1>Cocktail List</h1>
<% end %>
<% content_for :url do %>
  'https://images.unsplash.com/photo-1536510648730-1dd9ea3768ea?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=35f6ac88ddf7d1b936fbcd8dd15611a0&auto=format&fit=crop&w=800&q=60'
<% end %>

<%= render 'layouts/banner' %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% path = cocktail.image_path.file ? cocktail.image_path : Cocktail::SAMPLE_IMAGE.sample %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <div class="card-cocktail-pic"">
              <%= cl_image_tag(path, width: 250, height: 250, crop: "fill", class: "img-circle") %>
            </div>
            <div class="card-cocktail-footer">
              <h3><%= cocktail.name %></h3>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
