<div class="navbar-wagon">
  <div class="navbar-logo">
    <%= link_to "Barful-life", root_path, id: "logo", class: "hidden-xs" %>
    <%= link_to root_path, class: "navbar-logo-icon visible-xs" do %>
      <i class="fab fa-leanpub"></i>
      <p>Home</p>
    <% end %>
  </div>
  <div class="navbar-center hidden-xs">
    <%= yield :title %>
  </div>
  <div class="navbar-center visible-xs">
    <h4 class="navbar-center-title">Barful life</h4>
  </div>
  <div class="navbar-wagon-right">
    <%= link_to "Make a cocktail", new_cocktail_path, class: 'btn btn-danger  hidden-xs' %>
    <%= link_to new_cocktail_path, class: "navbar-new-icon visible-xs" do %>
      <i class="fas fa-plus"></i>
      <p>New Cocktail</p>
    <% end %>
  </div>
</div>


